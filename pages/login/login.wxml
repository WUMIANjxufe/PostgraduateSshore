<view class="container">
    <view class="login-icon">
        <image class="login-img" src="../../images/login/loginLog.jpg"></image>
    </view>
    <view class="login-from">

        <!--账号-->
        <view class="inputView">
            <image class="nameImage" src="../../images/login/name.png"></image>
            <label class="loginLab">账号</label>
            <input class="inputText" placeholder="请输入账号" bindinput="sidInput" />
        </view>
        <view class="line"></view>

        <!--密码-->
        <view class="inputView">
            <image class="keyImage" src="../../images/login/key.png"></image>
            <label class="loginLab">密码</label>
            <input class="inputText" password="true" placeholder="请输入密码" bindinput="passwordInput" />
        </view>
        <!-- size="{undefined{primarySize}}" loading="{undefined{loading}}"
            plain="{undefined{plain}}"  -->
        <!--按钮-->
        <view class="loginBtnView">
            <button class="loginBtn" type="primary"  plain="{undefined{plain}}"
                bindtap="login">登录</button>
                
        </view>
    </view>
</view>