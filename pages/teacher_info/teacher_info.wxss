 /*=======加减按钮=======*/
  /*主容器*/  
.stepper {  
  width: 150px;  
  height: 30px;  
  /*给主容器设一个边框*/  
  border: 1px solid #ccc;  
  border-radius: 3px;
  margin-left: 220rpx;
  margin-top:80rpx ;
  border-radius: 10rpx;
  position: relative;
  top:-50rpx;
}  
 
/*加号和减号*/  
.stepper text {  
  width: 54px;  
  line-height: 30px;  
  text-align: center;  
  float: left;  
  background-color: rgba(68, 230, 68, 0.495);
}  
  /*数值*/  
.stepper input {  
  width: 40px;  
  height: 30px;  
  float: left;  
  margin: 0 auto;  
  text-align: center;  
  font-size: 12px;  
  /*给中间的input设置左右边框即可*/  
  border-left: 1px solid #ccc;  
  border-right: 1px solid #ccc;  
}  
 
/*普通样式*/  
.stepper .normal{  
  color: black;  
}  
 
/*禁用样式*/  
.stepper .disabled{  
  color: #ccc;  
}  
 
