/* pages/movieDetails/movieDetail.wxss */
page{
  background:#F7F7F7;
}
.container1{
  margin-top: 10rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  display: flex;
  flex-direction: row;
  border: solid 2rpx #bbffaa;
  background-color: #363636;
  border-radius: 20rpx;
}

.container1-movie-imag{
  height: 260rpx;
  width: 200rpx;
  border-radius: 3px;
}

.container1-movie-content{
  margin-left: 30rpx;  
  display: flex;
  flex-direction: column;
}
.container1-movie-text{
  font-size: 20rpx;
  margin-top: 20rpx;
  color: #fff;
}

.container1-option{
  display: flex;
  flex-direction: row;
  margin-top: 4rpx;
}

.container1-option-border{
  margin-top: 20rpx;
  background-color: white;
  border: 1px solid white;
  height: 60rpx;
  width: 180rpx;
  border-radius: 5px;
  margin-left: 25rpx;
}

.container1-option-text{
  margin-left: 10rpx;
  font-size: 24rpx;
}

.container1-option-image{
  margin-top: 18rpx;
  margin-left: 48rpx;
  height: 24rpx;
  width: 24rpx;
}

